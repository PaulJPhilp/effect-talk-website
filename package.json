{
  "name": "effect-talk-website",
  "version": "0.2.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:clean": "rm -rf .next && next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "test": "vitest --config vitest.config.mts",
    "test:run": "vitest run --config vitest.config.mts",
    "test:coverage": "vitest run --config vitest.config.mts --coverage",
    "test:integration": "test -n \"$DATABASE_URL\" || { echo 'âœ— DATABASE_URL is not set. Point it at a test Postgres instance (never production).'; exit 1; } && RUN_INTEGRATION_TESTS=1 vitest run --config vitest.config.mts src/services/__tests__/integration.db.test.ts",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:load:patterns": "bun run scripts/load-patterns.ts",
    "db:seed:tour": "bun run scripts/seed-tour.ts",
    "db:stage": "bun run scripts/load-patterns.ts && bun run scripts/seed-tour.ts",
    "db:promote": "bun run scripts/promote.ts",
    "db:promote:all": "bun run scripts/promote.ts all",
    "db:promote:dry": "bun run scripts/promote.ts all --dry-run",
    "db:check": "bun run scripts/check-db.ts",
    "db:apply-feedback": "bun run scripts/apply-feedback-migration.ts",
    "db:seed-migrations-then-migrate": "bun run scripts/seed-drizzle-migrations-and-migrate-feedback.ts",
    "env:check": "bun run scripts/check-env-for-deploy.ts",
    "deploy:staging": "bash scripts/deploy-staging.sh",
    "deploy:prod": "rm -rf .next .vercel/output && vercel --prod --force && bun run smoke:auth:prod",
    "smoke:auth:prod": "bun run scripts/smoke-auth-redirect.ts https://effecttalk.dev effecttalk.dev",
    "smoke:auth:staging": "bun run scripts/smoke-auth-redirect.ts https://staging-effecttalk.vercel.app staging-effecttalk.vercel.app",
    "perf:tour": "bun run scripts/tour-performance-baseline.ts",
    "test:policy": "bun run scripts/check-test-policy.ts",
    "test:ci": "vitest run --config vitest.config.mts --coverage && bun run scripts/check-test-policy.ts"
  },
  "dependencies": {
    "@codesandbox/sandpack-react": "^2.20.0",
    "@codesandbox/sandpack-themes": "^2.0.21",
    "@effect-atom/atom": "^0.5.2",
    "@effect-atom/atom-react": "^0.5.0",
    "@effect/platform": "^0.94.5",
    "@effect/platform-node": "^0.104.1",
    "@effect/schema": "^0.75.5",
    "@neondatabase/serverless": "^1.0.2",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.70.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.212.0",
    "@opentelemetry/sdk-node": "^0.212.0",
    "@tailwindcss/typography": "^0.5.19",
    "@tanstack/react-virtual": "^3.13.19",
    "@workos-inc/authkit-nextjs": "^2.14.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.45.1",
    "effect": "^3.19.19",
    "effect-mdx": "^0.2.2",
    "lucide-react": "^0.563.0",
    "next": "16.1.6",
    "next-themes": "^0.4.6",
    "pg": "^8.18.0",
    "posthog-js": "^1.353.0",
    "posthog-node": "^4.18.0",
    "radix-ui": "^1.4.3",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "resend": "^6.9.2",
    "sonner": "^2.0.7",
    "sugar-high": "^0.9.5",
    "tailwind-merge": "^3.5.0",
    "vercel": "^50.23.2"
  },
  "devDependencies": {
    "@opentelemetry/sdk-trace-base": "^2.5.1",
    "@tailwindcss/postcss": "^4.2.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^25.3.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "dotenv": "^17.3.1",
    "drizzle-kit": "^0.31.9",
    "eslint": "^9.39.3",
    "eslint-config-next": "16.1.6",
    "happy-dom": "^20.7.0",
    "imagetracerjs": "^1.2.6",
    "pngjs": "^7.0.0",
    "tailwindcss": "^4.2.1",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "overrides": {
    "esbuild": "0.27.3"
  },
  "ignoreScripts": [
    "sharp",
    "unrs-resolver"
  ],
  "trustedDependencies": [
    "sharp",
    "unrs-resolver"
  ]
}
